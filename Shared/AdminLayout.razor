<style>
/* ===== ROOT ===== */
.admin-root {
    display: flex;
    min-height: 100vh;
    font-family: system-ui, -apple-system, Segoe UI, Roboto;
    background: #0b1220;
    color: #e7edf8;
}

/* ===== SIDEBAR ===== */
.sidebar {
    width: 260px;
    background: linear-gradient(180deg, #0f1a2d, #0c1526);
    display: flex;
    flex-direction: column;
    padding: 14px;
    border-right: 1px solid rgba(255,255,255,.08);
    transition: width .2s ease;
}

.sidebar.collapsed {
    width: 80px;
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 16px;
}

.logo {
    width: 36px;
    height: 36px;
    background: rgba(110,168,254,.2);
    border-radius: 10px;
    display: grid;
    place-items: center;
    font-weight: 700;
}

.title {
    font-weight: 700;
    white-space: nowrap;
}

.toggle {
    margin-left: auto;
    background: none;
    border: 1px solid rgba(255,255,255,.15);
    color: #fff;
    border-radius: 8px;
    padding: 4px 8px;
    cursor: pointer;
}

/* ===== MENU ===== */
.menu {
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex: 1;
}

.menu .item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    border-radius: 10px;
    color: #a8b3c7;
    text-decoration: none;
}

.menu .item.active {
    background: rgba(110,168,254,.2);
    color: #fff;
}

.menu .item:hover {
    background: rgba(255,255,255,.06);
    color: #fff;
}

/* ===== FOOTER ===== */
.sidebar-footer {
    border-top: 1px solid rgba(255,255,255,.08);
    padding-top: 12px;
}

.user {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}

.avatar {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    background: rgba(110,168,254,.25);
    display: grid;
    place-items: center;
    font-weight: 700;
}

.info .name {
    font-weight: 600;
}

.info .role {
    font-size: 12px;
    color: #a8b3c7;
}

.logout {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 10px;
    border-radius: 8px;
    color: #a8b3c7;
    text-decoration: none;
}

.logout:hover {
    background: rgba(255,255,255,.06);
    color: #fff;
}

/* ===== COLLAPSED ===== */
.sidebar.collapsed span {
    display: none;
}

/* ===== MAIN ===== */
.main {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.topbar {
    height: 56px;
    display: flex;
    align-items: center;
    padding: 0 16px;
    border-bottom: 1px solid rgba(255,255,255,.08);
    background: rgba(6,10,20,.6);
}

.page-title {
    font-weight: 600;
    color: #a8b3c7;
}

.content {
    padding: 16px;
}
</style>

@code {
    private bool collapsed;

    void Toggle()
    {
        collapsed = !collapsed;
    }
}
